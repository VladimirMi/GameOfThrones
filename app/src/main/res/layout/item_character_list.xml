<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/spacing_normal_16">

    <ImageView
        android:id="@+id/house_icon_img"
        android:layout_width="@dimen/size_medium_56"
        android:layout_height="@dimen/size_medium_56"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/spacing_medium_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/character_name_txt"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/font_normal_16"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/character_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>